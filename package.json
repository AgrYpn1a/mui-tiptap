{
  "name": "mui-tiptap",
  "version": "0.0.0-development",
  "description": "A Material-UI (MUI) styled WYSIWYG rich text editor, using Tiptap",
  "keywords": [
    "mui",
    "tiptap",
    "material-ui",
    "prosemirror",
    "rich text",
    "wysiwyg",
    "quill",
    "draftjs",
    "slate"
  ],
  "homepage": "https://github.com/sjdemartini/mui-tiptap",
  "bugs": "https://github.com/sjdemartini/mui-tiptap/issues",
  "author": "Steven DeMartini <sjdemartini@users.noreply.github.com>",
  "repository": "sjdemartini/mui-tiptap",
  "type": "module",
  "exports": "./build/index.js",
  "types": "./build/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": "^18.15.0",
    "npm": "^9.5.0"
  },
  "volta": {
    "node": "18.15.0",
    "npm": "9.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run type:dts && pnpm run build:main",
    "build:main": "swc ./src -d ./build",
    "clean": "rimraf build coverage nyc_output",
    "type:dts": "tsc --emitDeclarationOnly --project tsconfig.build.json",
    "type:check": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "lint:check": "eslint --ext .js,.jsx,.ts,.tsx src",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\""
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "c8": "^7.13.0",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "source-map-support": "^0.5.21",
    "typescript": "^5.0.4",
    "vitest": "^0.29.8"
  }
}
